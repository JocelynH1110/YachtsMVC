    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.PhotoPath))
                {
                    <img src="@Url.Content(item.PhotoPath)" width="50" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
