<table class="table border-1 table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().PhotoPath)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Contact)
