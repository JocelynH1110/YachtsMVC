@*@model IEnumerable<Yachts.Models.NewsItem>*@
@model MvcPaging.IPagedList<Yachts.Models.NewsItem>
@using Yachts.Helpers

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>新聞列表</h2>
@using (Html.BeginForm("Index", "NewsItems", FormMethod.Get))
{
    <label>快速搜尋_標題</label>
    <input type="search" name="searchByTitle" value="@ViewBag.SearchByTitle" />

    <laber>目前顯示幾筆資料:</laber>
    <input name="pageSize" value="@ViewBag.pageSize" />
    <input type="submit" value="送出" />
}
<p>
    @Html.ActionLink("新增", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Pinned)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CreatedAt)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().UpdatedAt)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pinned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @*@Html.Raw(item.Content)*@
                @item.Content.Truncate(30)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>*@
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.NewsId }) |
                @Html.ActionLink("詳細資料", "Details", new { id = item.NewsId }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.NewsId })
            </td>
        </tr>
    }

</table>

<div>
    @Html.Pager(Model.PageSize,Model.PageNumber,Model.TotalItemCount).Options(o=>o.AddRouteValue("pageSize", ViewBag.PageSize)).Options(o => o.AddRouteValue("searchByTitle", ViewBag.SearchByTitle))
</div>