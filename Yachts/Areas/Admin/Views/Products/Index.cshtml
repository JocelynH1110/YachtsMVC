@*@model IEnumerable<Yachts.Models.Product>*@
@model MvcPaging.IPagedList<Yachts.Models.Product>
@using Yachts.Helpers

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>遊艇列表</h2>
@using (Html.BeginForm("Index", "Products", FormMethod.Get))
{
    <label>快速搜尋_遊艇名稱:</label>
    <input type="search" name="searchByName" value="@ViewBag.SearchByName" />

    <laber>目前顯示幾筆資料:</laber>
    <input name="pageSize" value="@ViewBag.pageSize" />
    <input type="submit" value="送出" />
}
<p>
    @Html.ActionLink("新增", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().IsLatest)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Sizes)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Structual)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Specification)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().CreatedAt)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().UpdatedAt)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsLatest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Sizes)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Structual)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>*@
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                @Html.ActionLink("詳細資料", "Details", new { id = item.Id }) |
                @Html.ActionLink("刪除", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

<div>
    @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount).Options(o => o.AddRouteValue("pageSize", ViewBag.PageSize)).Options(o => o.AddRouteValue("searchByName", ViewBag.SearchByName))
</div>
