@model Yachts.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>刪除該遊艇資料</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IsLatest)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsLatest)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sizes)
        </dt>

        <dd>
            @if (Model.Sizes != null && Model.Sizes.Any())  // .Any() 檢查「集合裡是否有任何一筆資料」
            {
                <table  style="border:1px solid gray !important;">
                    @foreach (var item in Model.Sizes)
                    {
                        <tr>
                            <th style="width: 130px; border: 1px solid gray !important"  >@item.DimensionName</th>
                            <td style="width: 130px; border: 1px solid gray !important" >@item.DimensionValue</td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p class="text-muted">無尺寸資料</p>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Structual)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Structual)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Specification)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Specification)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UpdatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UpdatedAt)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="刪除" class="btn btn-default" /> |
            @Html.ActionLink("返回列表", "Index")
        </div>
    }
</div>
